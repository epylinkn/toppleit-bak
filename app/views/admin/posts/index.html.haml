%h1 Posts

%a{href: new_admin_post_path} New Post

%table
  %thead
    %tr
      %td Title
      %td Publish Date
      %td Actions
  - @posts.each do |p|
    %tr
      %td= p.title
      %td= p.publish_date.to_s
      %td
        = link_to '[edit]', edit_admin_post_path(p)
        = link_to '[delete]', admin_post_path(p), :confirm => 'Are you sure?', :method => :delete